---
import Header from '../components/layout/Header'
import Footer from '../components/layout/Footer'

interface Props {
  title?: string
  description?: string
}

const {title = 'Our School', description = 'Welcome to Our School'} = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    
    {/* Resource hints for performance */}
    <link rel="preconnect" href="https://cdn.sanity.io" />
    <link rel="dns-prefetch" href="https://cdn.sanity.io" />
    
    {/* Preload critical fonts - fonts are loaded via CSS @font-face */}
    
    {/* Remove Google Fonts - using local fonts instead */}
  </head>
  <body class="bg-[var(--color-neutral)] text-[var(--color-primary)]">
    <Header client:idle />
    <main>
      <slot />
    </main>
    <Footer client:idle />
  </body>
</html>

<style>
  @import '../styles/global.css';

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
