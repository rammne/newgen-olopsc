---
import { getSanityImageUrl } from "../../lib/utils/sanity";

interface Props {
  member: {
    name?: string;
    role?: string;
    department?: string;
    photo?: {
      asset?: {
        url?: string;
        _id?: string;
      };
      alt?: string;
    };
    qualifications?: string[];
    bio?: string;
    email?: string;
    socialLinks?: Array<{
      platform?: string;
      url?: string;
      label?: string;
    }>;
  };
  index?: number;
}

const { member, index = 0 } = Astro.props;
---

<div
  class="faculty-card bg-white p-6 sm:p-8 rounded-2xl shadow-md hover:shadow-xl transition-all duration-500 group border border-[var(--color-neutral)]/50 hover:border-[var(--color-primary)]/20"
>
  {/* Photo */}
  <div class="mb-6 flex justify-center">
    {
      member.photo?.asset?.url ? (
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)]/20 to-[var(--color-accent)]/20 rounded-full blur-xl group-hover:blur-2xl transition-all duration-500" />
          <img
            src={getSanityImageUrl(member.photo, {
              width: 200,
              height: 200,
              fit: "crop",
            })}
            alt={member.photo.alt || member.name || ""}
            class="relative w-32 h-32 sm:w-36 sm:h-36 rounded-full object-cover mx-auto border-4 border-white shadow-lg group-hover:scale-105 transition-transform duration-500"
            loading="lazy"
            decoding="async"
          />
        </div>
      ) : (
        <div class="w-32 h-32 sm:w-36 sm:h-36 rounded-full bg-[var(--color-neutral)] flex items-center justify-center mx-auto border-4 border-white shadow-lg">
          <span class="text-4xl text-[var(--color-primary)]/40">
            {member.name?.charAt(0) || "?"}
          </span>
        </div>
      )
    }
  </div>

  {/* Name */}
  <h3
    class="text-card-title-mobile sm:text-card-title-desktop text-[var(--color-primary)] mb-2 font-bold group-hover:text-[var(--color-accent)] transition-colors duration-300"
  >
    {member.name}
  </h3>

  {/* Role */}
  {
    member.role && (
      <p class="text-main-mobile sm:text-main-desktop text-[var(--color-primary)]/90 mb-2 font-semibold">
        {member.role}
      </p>
    )
  }

  {/* Department */}
  {
    member.department && (
      <p class="text-small-mobile sm:text-small-desktop text-[var(--color-primary)]/60 mb-4">
        {member.department}
      </p>
    )
  }

  {/* Qualifications */}
  {
    member.qualifications && member.qualifications.length > 0 && (
      <div class="mb-4">
        <ul class="space-y-2">
          {member.qualifications.map((qual: string) => (
            <li class="text-small-mobile sm:text-small-desktop text-[var(--color-primary)]/80 flex items-start gap-2">
              <span class="text-[var(--color-accent)] mt-0.5 flex-shrink-0">
                âœ“
              </span>
              <span>{qual}</span>
            </li>
          ))}
        </ul>
      </div>
    )
  }

  {/* Bio */}
  {
    member.bio && (
      <p class="text-main-mobile sm:text-main-desktop text-[var(--color-primary)]/70 text-sm mb-6 leading-relaxed line-clamp-3">
        {member.bio}
      </p>
    )
  }

  {/* Contact Info */}
  {
    (member.email || (member.socialLinks && member.socialLinks.length > 0)) && (
      <div class="flex flex-col gap-3 items-center pt-4 border-t border-[var(--color-neutral)]">
        {member.email && (
          <a
            href={`mailto:${member.email}`}
            class="text-small-mobile sm:text-small-desktop text-[var(--color-accent)] hover:text-[var(--color-primary)] font-medium transition-colors duration-300 flex items-center gap-2"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              />
            </svg>
            {member.email}
          </a>
        )}
        {member.socialLinks && member.socialLinks.length > 0 && (
          <div class="flex gap-3 justify-center">
            {member.socialLinks.map((social: any) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="w-9 h-9 rounded-full bg-[var(--color-neutral)] hover:bg-[var(--color-primary)] text-[var(--color-primary)] hover:text-white flex items-center justify-center transition-all duration-300 hover:scale-110"
                title={social.label || social.platform}
              >
                {social.platform === "facebook" && (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                  </svg>
                )}
                {social.platform === "twitter" && (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                  </svg>
                )}
                {social.platform === "instagram" && (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                  </svg>
                )}
                {social.platform === "linkedin" && (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                )}
                {social.platform === "youtube" && (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                  </svg>
                )}
                {social.platform === "tiktok" && (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z" />
                  </svg>
                )}
                {social.platform === "other" && (
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                    />
                  </svg>
                )}
              </a>
            ))}
          </div>
        )}
      </div>
    )
  }
</div>

<style>
  .faculty-card {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }
  .faculty-card:nth-child(1) {
    animation-delay: 0.1s;
  }
  .faculty-card:nth-child(2) {
    animation-delay: 0.2s;
  }
  .faculty-card:nth-child(3) {
    animation-delay: 0.3s;
  }
  .faculty-card:nth-child(4) {
    animation-delay: 0.4s;
  }
  .faculty-card:nth-child(5) {
    animation-delay: 0.5s;
  }
  .faculty-card:nth-child(6) {
    animation-delay: 0.6s;
  }
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
