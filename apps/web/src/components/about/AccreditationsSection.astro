---
interface Props {
    accreditations: {
        title?: string;
        accreditations?: Array<{
            name?: string;
            description?: string;
            logo?: {
                asset?: {
                    url?: string;
                };
                alt?: string;
            };
        }>;
    };
}

const { accreditations } = Astro.props;

if (!accreditations) return null;
---

<section
    class="min-h-[50vh] py-16 sm:py-24 bg-gradient-to-b from-white to-[var(--color-neutral)]/20 relative overflow-hidden"
>
    {/* Decorative background elements */}
    <div
        class="absolute top-0 right-0 w-[500px] h-[500px] bg-[var(--color-primary)]/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/3 pointer-events-none"
    >
    </div>
    <div
        class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-[var(--color-accent)]/5 rounded-full blur-3xl translate-y-1/2 -translate-x-1/3 pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-5 sm:px-[60px] relative z-10">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2
                class="text-section-header-mobile sm:text-section-header-desktop font-serif text-[var(--color-primary)] mb-4"
            >
                {accreditations.title || "Accreditations & Affiliations"}
            </h2>
            <div
                class="w-24 h-1.5 bg-[var(--color-accent)] mx-auto rounded-full"
            >
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                accreditations.accreditations &&
                    accreditations.accreditations.map((item, index) => (
                        <div
                            class="group bg-white rounded-2xl p-8 shadow-sm border border-[var(--color-neutral)] hover:shadow-xl hover:border-[var(--color-primary)]/10 transition-all duration-500 flex flex-col items-center text-center relative overflow-hidden"
                            style={`animation-delay: ${index * 100}ms`}
                        >
                            {/* Top Accent Line */}
                            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-accent)] opacity-0 group-hover:opacity-100 transition-opacity duration-500" />

                            {/* Logo Container */}
                            <div class="w-full h-40 mb-6 flex items-center justify-center p-4">
                                {item.logo?.asset?.url ? (
                                    <img
                                        src={item.logo.asset.url}
                                        alt={
                                            item.logo.alt ||
                                            item.name ||
                                            "Accreditation logo"
                                        }
                                        class="max-h-full max-w-full object-contain filter group-hover:scale-105 transition-transform duration-500"
                                    />
                                ) : (
                                    <span class="text-5xl font-bold text-[var(--color-primary)]/20">
                                        {item.name?.charAt(0) || "A"}
                                    </span>
                                )}
                            </div>

                            {/* Content */}
                            <h3 class="text-xl sm:text-2xl font-bold text-[var(--color-primary)] mb-3 group-hover:text-[var(--color-accent)] transition-colors duration-300">
                                {item.name}
                            </h3>

                            {item.description && (
                                <p class="text-sm sm:text-base text-gray-600 leading-relaxed font-light">
                                    {item.description}
                                </p>
                            )}
                        </div>
                    ))
            }
        </div>
    </div>
</section>
