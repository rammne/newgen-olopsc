---
interface Props {
  stats: Array<{
    value?: string
    label?: string
    icon?: string
    prefix?: string
    suffix?: string
  }>
}

const {stats} = Astro.props
---

{stats && stats.length > 0 && (
  <section class="min-h-[60vh] px-5 py-10 sm:px-[60px] sm:py-[100px] bg-white">
    <div class="container mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        {stats.map((stat) => (
          <div class="text-center">
            {stat.icon && (
              <div class="text-4xl mb-4">{stat.icon}</div>
            )}
            <div class="text-section-header-mobile sm:text-section-header-desktop text-[var(--color-primary)] font-bold mb-2">
              {stat.prefix}{stat.value}{stat.suffix}
            </div>
            <p class="text-main-mobile sm:text-main-desktop text-[var(--color-primary)]">
              {stat.label}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
)}

