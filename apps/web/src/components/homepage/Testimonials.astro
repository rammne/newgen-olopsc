---
interface Props {
  testimonials: {
    title?: string
    testimonials?: Array<{
      quote?: string
      author?: {
        name?: string
        role?: string
        image?: {
          asset?: {
            url?: string
          }
          alt?: string
        }
        company?: string
      }
      rating?: number
    }>
  }
}

const {testimonials: testimonialsData} = Astro.props
---

{testimonialsData && testimonialsData.testimonials && testimonialsData.testimonials.length > 0 && (
  <section class="min-h-[60vh] px-5 py-10 sm:px-[60px] sm:py-[100px] bg-primary/10 border-t border-[var(--color-neutral)]/30">
    <div class="container mx-auto">
          {testimonialsData.title && (
            <h2 class="text-section-header-mobile sm:text-section-header-desktop text-primary text-center mb-12">
              {testimonialsData.title}
            </h2>
          )}
      {/* Mobile View: Compact List */}
      <div class="flex flex-col gap-4 mb-8 md:hidden">
        {testimonialsData.testimonials.map((testimonial) => (
          <div class="bg-[var(--color-neutral)] p-4 rounded-lg shadow-sm flex items-start gap-4">
            <div class="flex-shrink-0">
               {testimonial.author?.image?.asset?.url ? (
                <img
                  src={testimonial.author.image.asset.url}
                  alt={testimonial.author.image.alt || testimonial.author.name || ''}
                  class="w-12 h-12 rounded-full object-cover border border-[var(--color-primary)]/10"
                />
              ) : (
                <div class="w-12 h-12 rounded-full bg-[var(--color-primary)]/10 flex items-center justify-center text-xl">
                  ðŸ‘¤
                </div>
              )}
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex justify-between items-start mb-1">
                <div>
                   <p class="font-bold text-[var(--color-primary)] text-main-mobile leading-tight">
                    {testimonial.author?.name}
                  </p>
                  {testimonial.author?.role && (
                    <p class="text-small-mobile text-[var(--color-primary)]/70 leading-tight">
                      {testimonial.author.role}
                    </p>
                  )}
                </div>
                {testimonial.rating && (
                  <div class="text-[var(--color-accent)] text-xs tracking-tighter shrink-0 ml-2">
                    {'â˜…'.repeat(testimonial.rating)}
                  </div>
                )}
              </div>
              <blockquote class="text-small-mobile text-[var(--color-primary)]/80 italic line-clamp-3 relative">
                "{testimonial.quote}"
              </blockquote>
            </div>
          </div>
        ))}
      </div>

      {/* Desktop View: Grid */}
      <div class="hidden md:grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {testimonialsData.testimonials.map((testimonial) => (
          <div class="bg-[var(--color-neutral)] p-6 rounded-lg">
            {testimonial.rating && (
              <div class="mb-4 text-[var(--color-accent)]">
                {'â˜…'.repeat(testimonial.rating)}
              </div>
            )}
            <blockquote class="text-main-mobile sm:text-main-desktop text-[var(--color-primary)] mb-6 italic">
              "{testimonial.quote}"
            </blockquote>
            <div class="flex items-center gap-4">
              {testimonial.author?.image?.asset?.url && (
                <img
                  src={testimonial.author.image.asset.url}
                  alt={testimonial.author.image.alt || testimonial.author.name || ''}
                  class="w-12 h-12 rounded-full object-cover"
                />
              )}
              <div>
                <p class="font-semibold text-[var(--color-primary)]">
                  {testimonial.author?.name}
                </p>
                {testimonial.author?.role && (
                  <p class="text-small-mobile sm:text-small-desktop text-[var(--color-primary)]">
                    {testimonial.author.role}
                    {testimonial.author.company && `, ${testimonial.author.company}`}
                  </p>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
)}

