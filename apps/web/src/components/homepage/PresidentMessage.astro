---
import { PortableText } from "astro-portabletext";
import { Image } from "astro:assets";
import { Quote } from "lucide-astro";

interface Props {
    presidentMessage: {
        title?: string;
        quote?: string;
        message?: any;
        presidentName?: string;
        presidentRole?: string;
        presidentImage?: any;
    };
}

const { presidentMessage } = Astro.props;

if (!presidentMessage) return null;

const {
    title = "President's Message",
    quote,
    message,
    presidentName = "Armida Salvador Samaniego, PhD",
    presidentRole = "President",
    presidentImage,
} = presidentMessage;
---

<section
    class="min-h-[60vh] px-5 py-10 sm:px-[60px] sm:py-[100px] bg-white relative overflow-hidden"
>
    <div class="container mx-auto max-w-7xl relative z-10">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">
            {/* Image Column */}
            <div class="relative">
                <div
                    class="relative aspect-[3/4] w-full max-w-md mx-auto lg:mx-0 rounded-2xl overflow-hidden shadow-2xl skew-x-1 transition-transform hover:skew-x-0 duration-500"
                >
                    {
                        presidentImage?.asset?.url ? (
                            <img
                                src={presidentImage.asset.url}
                                alt={presidentName}
                                class="absolute inset-0 w-full h-full object-cover transform scale-105 hover:scale-100 transition-transform duration-700"
                                loading="lazy"
                            />
                        ) : (
                            <div class="absolute inset-0 bg-neutral-200 flex items-center justify-center text-neutral-400">
                                <span class="text-sm">No Image</span>
                            </div>
                        )
                    }
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-primary/60 to-transparent opacity-60"
                    >
                    </div>
                </div>

                {/* Decorative elements */}
                <div
                    class="absolute -bottom-8 -left-8 w-64 h-64 bg-accent/10 rounded-full blur-3xl -z-10"
                >
                </div>
                <div
                    class="absolute -top-8 -right-8 w-64 h-64 bg-primary/5 rounded-full blur-3xl -z-10"
                >
                </div>
            </div>

            {/* Content Column */}
            <div class="text-center lg:text-left mt-10 lg:mt-0">
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/5 text-primary text-sm font-medium mb-8"
                >
                    <span class="relative flex h-2 w-2">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"
                        ></span>
                        <span
                            class="relative inline-flex rounded-full h-2 w-2 bg-primary"
                        ></span>
                    </span>
                    {title}
                </div>

                <div class="relative">
                    <Quote
                        class="mb-6 w-12 h-12 text-accent/20 transform -scale-x-100 mx-auto lg:mx-0"
                    />

                    {
                        quote && (
                            <blockquote class="text-xl sm:text-2xl font-serif text-primary italic mb-6 leading-relaxed">
                                "{quote}"
                            </blockquote>
                        )
                    }

                    <div
                        class="prose prose-lg prose-p:text-gray-600 prose-p:leading-relaxed prose-headings:font-serif prose-headings:text-primary mb-8 relative z-10"
                    >
                        {
                            message ? (
                                <PortableText value={message} />
                            ) : (
                                <p>Leadership with a heart for service.</p>
                            )
                        }
                    </div>
                </div>

                <div
                    class="mt-8 pt-8 border-t border-gray-100 flex flex-col sm:flex-row items-center gap-4 lg:justify-start justify-center"
                >
                    <div class="text-center lg:text-left">
                        <h3 class="text-2xl font-serif font-bold text-primary">
                            {presidentName}
                        </h3>
                        <p class="text-accent font-medium">{presidentRole}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
