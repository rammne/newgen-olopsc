---
import Icon from './Icon.astro'

interface Props {
  links: Array<{
    platform: string
    url: string
    label?: string
  }>
  size?: number | string
  class?: string
}

const {links, size = 24, class: className = ''} = Astro.props

// Map platform names to lucide icon names
const platformIcons: Record<string, string> = {
  facebook: 'facebook',
  twitter: 'twitter',
  instagram: 'instagram',
  linkedin: 'linkedin',
  youtube: 'youtube',
  tiktok: 'tiktok',
}
---

<div class={`social-icons ${className}`}>
  {links.map((link) => {
    const iconName = platformIcons[link.platform.toLowerCase()] || 'link'
    const label = link.label || `${link.platform} profile`
    
    return (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="social-icon"
        aria-label={label}
      >
        <Icon name={iconName} size={size} />
      </a>
    )
  })}
</div>

<style>
  .social-icons {
    display: flex;
    gap: 1rem;
    align-items: center;
  }
  
  .social-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border-radius: 0.375rem;
    color: var(--color-text, #1a1a1a);
    transition: all 0.2s;
  }
  
  .social-icon:hover {
    background-color: var(--color-bg-hover, #f3f4f6);
    transform: translateY(-2px);
  }
</style>

