---
import { PortableText } from "astro-portabletext";

interface Props {
    intro: {
        headline?: string;
        content?: any;
    };
}

const { intro } = Astro.props;

if (!intro) return null;
---

<section
    class="min-h-[40vh] px-5 py-10 sm:px-[60px] sm:py-[100px] bg-[var(--color-neutral)]/30 text-center"
>
    <div class="container mx-auto max-w-4xl">
        {
            intro.headline && (
                <h2 class="text-section-header-mobile sm:text-section-header-desktop font-serif text-[var(--color-primary)] mb-6">
                    {intro.headline}
                </h2>
            )
        }
        <div
            class="prose prose-lg mx-auto text-main-mobile sm:text-main-desktop text-gray-700"
        >
            {intro.content && <PortableText value={intro.content} />}
        </div>
    </div>
</section>
