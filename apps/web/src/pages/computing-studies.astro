---
import DepartmentTemplate from "../components/college/DepartmentTemplate.astro";
import { getComputingStudiesPage } from "../lib/sanity/queries";

const departmentData = await getComputingStudiesPage();

const department = departmentData || {
    title: "College of Computer Studies",
    degree: "Bachelor of Science in Computer Science, Bachelor of Science in Information Technology",
    hero: {
        headline: "College of Computer Studies",
        variant: "image",
