---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/homepage/Hero.astro";
import ScrollRevealWrapper from "../components/common/ScrollRevealWrapper.astro";
import ContactForm from "../components/contact/ContactForm.tsx";
import { getContactPage } from "../lib/sanity/queries";
import "../styles/global.css";
import { PortableText } from "astro-portabletext";
import {
    MapPin,
    Phone,
    Mail,
    Clock,
    Facebook,
    Instagram,
    Linkedin,
} from "lucide-astro";

const contactPage = await getContactPage();

const pageTitle = contactPage?.seo?.title || contactPage?.title || "Contact Us";
const pageDescription =
    contactPage?.seo?.description || "Get in touch with OLOPSC.";

// Helper to get icon for social
const getSocialIcon = (platform: string) => {
    switch (platform.toLowerCase()) {
        case "facebook":
            return Facebook;
        case "instagram":
            return Instagram;
        case "linkedin":
            return Linkedin;
        default:
            return MapPin;
    }
};
---

<Layout title={pageTitle} description={pageDescription}>
    {contactPage?.hero && <Hero hero={contactPage.hero} />}

    <section
        class="min-h-screen px-5 py-10 sm:px-[60px] sm:py-[100px] bg-neutral-light relative"
    >
        <div class="container mx-auto">
            <div class="grid lg:grid-cols-12 gap-12 lg:gap-20">
                {/* Left Column: Contact Info & Departments */}
                <div class="lg:col-span-5 space-y-12">
                    <ScrollRevealWrapper direction="left">
                        {/* Main Info */}
                        <div>
                            <h2 class="text-3xl font-serif text-primary mb-6">
                                {contactPage?.intro?.headline || "Get in Touch"}
                            </h2>
                            {
                                contactPage?.intro?.content && (
                                    <div class="prose text-gray-600 mb-8">
                                        <PortableText
                                            value={contactPage.intro.content}
                                        />
                                    </div>
                                )
                            }

                            <div class="space-y-6">
                                {
                                    contactPage?.contactInfo?.address && (
                                        <div class="flex items-start gap-4">
                                            <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center text-accent shadow-sm mt-1">
                                                <MapPin class="w-5 h-5" />
                                            </div>
                                            <div>
                                                <h4 class="font-bold text-gray-900">
                                                    Visit Us
                                                </h4>
                                                <p class="text-gray-600">
                                                    {
                                                        contactPage.contactInfo
                                                            .address
                                                    }
                                                </p>
                                            </div>
                                        </div>
                                    )
                                }

                                {
                                    contactPage?.contactInfo?.phone && (
                                        <div class="flex items-start gap-4">
                                            <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center text-accent shadow-sm mt-1">
                                                <Phone class="w-5 h-5" />
                                            </div>
                                            <div>
                                                <h4 class="font-bold text-gray-900">
                                                    Call Us
                                                </h4>
                                                <p class="text-gray-600">
                                                    {
                                                        contactPage.contactInfo
                                                            .phone
                                                    }
                                                </p>
                                            </div>
                                        </div>
                                    )
                                }

                                {
                                    contactPage?.contactInfo?.email && (
                                        <div class="flex items-start gap-4">
                                            <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center text-accent shadow-sm mt-1">
                                                <Mail class="w-5 h-5" />
                                            </div>
                                            <div>
                                                <h4 class="font-bold text-gray-900">
                                                    Email Us
                                                </h4>
                                                <p class="text-gray-600">
                                                    {
                                                        contactPage.contactInfo
                                                            .email
                                                    }
                                                </p>
                                            </div>
                                        </div>
                                    )
                                }
                            </div>
                        </div>

                        {/* Office Hours */}
                        {
                            contactPage?.officeHours && (
                                <div class="mt-12 bg-white p-8 rounded-2xl shadow-sm border border-neutral-200">
                                    <div class="flex items-center gap-3 mb-6">
                                        <Clock class="w-6 h-6 text-accent" />
                                        <h3 class="text-xl font-bold text-primary">
                                            {contactPage.officeHours.title ||
                                                "Office Hours"}
                                        </h3>
                                    </div>
                                    <ul class="space-y-3">
                                        {contactPage.officeHours.hours?.map(
                                            (schedule: any) => (
                                                <li class="flex justify-between items-center text-sm border-b border-gray-100 last:border-0 pb-3 last:pb-0">
                                                    <span class="font-medium text-gray-900 capitalize">
                                                        {schedule.day}
                                                    </span>
                                                    <span
                                                        class={`font-mono ${schedule.closed ? "text-red-500 font-bold" : "text-gray-600"}`}
                                                    >
                                                        {schedule.closed
                                                            ? "Closed"
                                                            : schedule.hours}
                                                    </span>
                                                </li>
                                            ),
                                        )}
                                    </ul>
                                </div>
                            )
                        }
                    </ScrollRevealWrapper>
                </div>

                {/* Right Column: Contact Form */}
                <div class="lg:col-span-7">
                    <ScrollRevealWrapper direction="up" delay={0.2}>
                        {
                            contactPage?.contactForm && (
                                <ContactForm
                                    client:load
                                    data={contactPage.contactForm}
                                />
                            )
                        }
                    </ScrollRevealWrapper>
                </div>
            </div>

            {/* Map Section */}
            {
                contactPage?.map && contactPage.map.embedUrl && (
                    <ScrollRevealWrapper direction="up" delay={0.3}>
                        <div class="mt-20 rounded-2xl overflow-hidden shadow-lg h-[400px] sm:h-[500px] border border-white">
                            <iframe
                                src={contactPage.map.embedUrl}
                                class="w-full h-full border-0"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"
                            />
                        </div>
                    </ScrollRevealWrapper>
                )
            }

            {/* Department Directory */}
            {
                contactPage?.departments &&
                    contactPage.departments.length > 0 && (
                        <ScrollRevealWrapper direction="up" delay={0.4}>
                            <div class="mt-20">
                                <h2 class="text-2xl font-serif text-primary mb-8 text-center">
                                    Department Directory
                                </h2>
                                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                                    {contactPage.departments.map(
                                        (dept: any) => (
                                            <div class="bg-white p-6 rounded-xl border border-neutral-200 hover:border-accent/50 transition duration-300">
                                                <h4 class="font-bold text-lg text-primary mb-4 border-b pb-2">
                                                    {dept.department}
                                                </h4>
                                                <div class="space-y-2 text-sm text-gray-600">
                                                    {dept.contact?.email && (
                                                        <div class="flex items-center gap-2">
                                                            <Mail
                                                                size={14}
                                                                class="text-accent"
                                                            />
                                                            <a
                                                                href={`mailto:${dept.contact.email}`}
                                                                class="hover:text-accent transition"
                                                            >
                                                                {
                                                                    dept.contact
                                                                        .email
                                                                }
                                                            </a>
                                                        </div>
                                                    )}
                                                    {dept.contact?.phone && (
                                                        <div class="flex items-center gap-2">
                                                            <Phone
                                                                size={14}
                                                                class="text-accent"
                                                            />
                                                            <a
                                                                href={`tel:${dept.contact.phone}`}
                                                                class="hover:text-accent transition"
                                                            >
                                                                {
                                                                    dept.contact
                                                                        .phone
                                                                }
                                                            </a>
                                                        </div>
                                                    )}
                                                </div>
                                            </div>
                                        ),
                                    )}
                                </div>
                            </div>
                        </ScrollRevealWrapper>
                    )
            }
        </div>
    </section>
</Layout>
